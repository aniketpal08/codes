import socket
client_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
client_socket.connect(('localhost', 12345))
client_socket.send('recieve'.encode())
data = client_socket.recv(1024).decode()
print(f"data is recived from client {data}")
client_socket.close()

import socket
server_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
server_socket.bind(('localhost', 12345))
server_socket.listen(5)
print("Server is listening to port 12345")
client_socket, client_address = server_socket.accept()
print(f"Connection is established with {client_address}")
data = client_socket.recv(1024).decode()
print(f"Data is received from client {data}")
client_socket.send("Hello world".encode())
client_socket.close()
server_socket.close()
